{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "opener:default",
    "shell:default",
    "dialog:default",
    "dialog:allow-ask",
    "dialog:allow-message",
    "os:default",
    "process:default",
    "deep-link:default",
    "updater:default",
    "updater:allow-check",
    "updater:allow-download-and-install",
    "clipboard-manager:allow-read-text",
    "core:window:default",
    "core:window:allow-start-dragging",
    "fs:default",
    {
      "identifier": "fs:allow-appcache-read"
    },
    {
      "identifier": "fs:allow-appcache-write"
    },
    {
      "identifier": "fs:allow-app-read",
      "allow": [{ "path": "$HOME/.codex/*" },{ "path": "$HOME/.codex/sessions/**/*" }]
    }
  ]
}
