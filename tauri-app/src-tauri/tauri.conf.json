{
  "$schema": "https://schema.tauri.app/v2/config.json",
  "productName": "MCPLinker",
  "version": "../package.json",
  "identifier": "com.milisp.mcplinker",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MCP Linker",
        "width": 1064,
        "height": 768,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 12,
          "y": 22
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["mcp-linker"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNCM0Q1ODU3RTRGMkJFRgpSV1R2SzA5K2hkV3pBNHI0NlpIYzYyb2tvR09wWFJIMWhsRE5teHRCL0RzQWsvY1F4WWZzdGtXdwo=",
      "endpoints": [
        "https://github.com/milisp/mcp-linker/releases/download/{{version}}/updater.json"
      ]
    }
  }
}
