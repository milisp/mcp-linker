{
  "$schema": "https://schema.tauri.app/v2/config.json",
  "productName": "MCPLinker",
  "version": "../package.json",
  "identifier": "com.milisp.mcplinker",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MCP Linker",
        "width": 1064,
        "height": 768,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["../public/logo.png"]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["mcp-linker"]
      }
    }
  }
}
